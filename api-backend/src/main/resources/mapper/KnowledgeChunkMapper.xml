<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sspku.agent.module.knowledge.mapper.KnowledgeChunkMapper">
    
    <resultMap id="BaseResultMap" type="com.sspku.agent.module.knowledge.entity.KnowledgeChunk">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="document_id" property="documentId" jdbcType="BIGINT"/>
        <result column="kb_id" property="kbId" jdbcType="BIGINT"/>
        <result column="chunk_index" property="chunkIndex" jdbcType="INTEGER"/>
        <result column="content" property="content" jdbcType="LONGVARCHAR"/>
        <result column="token_count" property="tokenCount" jdbcType="INTEGER"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, document_id, kb_id, chunk_index, content, token_count, created_at
    </sql>

    <insert id="insert" parameterType="com.sspku.agent.module.knowledge.entity.KnowledgeChunk" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO knowledge_chunk (document_id, kb_id, chunk_index, content, token_count, created_at)
        VALUES (#{documentId}, #{kbId}, #{chunkIndex}, #{content}, #{tokenCount}, NOW())
    </insert>

    <insert id="batchInsert" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO knowledge_chunk (document_id, kb_id, chunk_index, content, token_count, created_at)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.documentId}, #{item.kbId}, #{item.chunkIndex}, #{item.content}, #{item.tokenCount}, NOW())
        </foreach>
    </insert>

    <select id="selectByDocumentId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM knowledge_chunk
        WHERE document_id = #{documentId}
        ORDER BY chunk_index ASC
    </select>

    <delete id="deleteByDocumentId">
        DELETE FROM knowledge_chunk WHERE document_id = #{documentId}
    </delete>

    <select id="selectByIds" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM knowledge_chunk
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>
